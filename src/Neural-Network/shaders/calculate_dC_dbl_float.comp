#version 460 core

layout(local_size_x = 1) in;

const uint vectorSize = %VS%;
const uint sampleSize = %SS%;

layout(std430, binding = 0) buffer InputMat {
    float dC_dZ[vectorSize][sampleSize];
};

layout(std430, binding = 1) buffer Output {
    float dC_db[vectorSize];
};

void main() {
    uint row = gl_GlobalInvocationID.x;
    float sum = 0.0;
    for (uint sampleNumber = 0u; sampleNumber < sampleSize; ++sampleNumber) {
        sum += dC_dZ[row][sampleNumber];
    }
    dC_db[row] = sum;

}
